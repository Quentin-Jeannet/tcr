{% extends 'base-admin.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>ValidationToken</th>
                <td>{{ member.validationToken }}</td>
            </tr>
            <tr>
                <th>IsValid</th>
                <td>{{ member.isValid ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_member_index') }}">back to list</a>

    <a href="{{ path('app_admin_member_edit', {'id': member.id}) }}">edit</a>

    {{ include('admin_member/_delete_form.html.twig') }}
{% endblock %}
