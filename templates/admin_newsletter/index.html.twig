{% extends 'base.html.twig' %}

{% block title %}Newsletter index{% endblock %}

{% block body %}
    <h1>Newsletter index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>ImageName</th>
                <thclass="text-end">{% trans %} back.labels.actions {% endtrans %}</thclass=>
            </tr>
        </thead>
        <tbody>
        {% for newsletter in newsletters %}
            <tr>
                <td>{{ newsletter.id }}</td>
                <td>{{ newsletter.title }}</td>
                <td>{{ newsletter.description }}</td>
                <td>{{ newsletter.imageName }}</td>
                <td>
                    <a href="{{ path('app_admin_newsletter_show', {'id': newsletter.id}) }}">show</a>
                    <a href="{{ path('app_admin_newsletter_edit', {'id': newsletter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{% trans %}back.message.noRecordFound{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_newsletter_new') }}">Create new</a>
{% endblock %}
