{{ form_start(form) }}
<fieldset class="bg-white p-3 mb-3">
    <div class="row">
        <div class="col-12 col-md-3">
            {{ form_row(form.name)}}
        </div>
        <div class="col-12 col-md-3">
            {{ form_row(form.firstName)}}
        </div>
        <div class="col-12 col-md-3">
        {{ form_row(form.email)}}
        </div>
        <div class="col-12 col-md-3">
        {{ form_row(form.phone)}}
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-4">
            {{ form_row(form.plainRole)}}
        </div>
        <div class="col-12 col-md-4">
            {{ form_row(form.plainPassword)}}
        </div>
        <div class="col-12 col-md-4">
            {{ form_row(form.confirmPassword)}}
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6">
        {{ form_row(form.address)}}
        </div>
        <div class="col-12 col-md-6">
        {{ form_row(form.address2)}}
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-4">
        {{ form_row(form.zip)}}
        </div>
        <div class="col-12 col-md-4">
        {{ form_row(form.city)}}
        </div>
        <div class="col-12 col-md-4">
        {{ form_row(form.country)}}
        </div>
    </div>
    {{ form_widget(form) }}
    {% include 'admin_common/_admin_required_field.html.twig' %}
</fieldset>
    <button class="btn btn-primary mt-3">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
