{% extends 'base-admin.html.twig' %}

{% block title %}Price{% endblock %}

{% block body %}
    <h1>Price</h1>
    <a href="{{ path('app_admin_price_index') }}" class="btn btn-secondary">back to list</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ price.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ price.price }}</td>
            </tr>
