{% macro renderAddressWidget(address) %}
    <h4>{% trans %}front.user.newAddress{% endtrans %}</h4>
    <div class="row my-3">
        <div class="col-11">
            <div class="row">
                <div class="col-12 col-md-2">{{form_row(address.vars.form["name"])}}</div>
                <div class="col-12 col-md-6">{{form_row(address.vars.form["address"])}}</div>
                <div class="col-12 col-md-4">{{form_row(address.vars.form["complement"])}}</div>
            </div>
            <div class="row">
                <div class="col-12 col-md-2">{{form_row(address.vars.form["zip"])}}</div>
                <div class="col-12 col-md-2">{{form_row(address.vars.form["city"])}}</div>
                <div class="col-12 col-md-3">{{form_row(address.vars.form["country"])}}</div>
            </div>
        </div>
        <div class="col-1 delete-div"></div>
    </div>



{% endmacro %}