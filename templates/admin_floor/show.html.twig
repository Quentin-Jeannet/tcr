{% extends 'base.html.twig' %}

{% block title %}Floor{% endblock %}

{% block body %}
    <h1>Floor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ floor.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ floor.imageName }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ floor.text }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ floor.createdAt ? floor.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ floor.updatedAt ? floor.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ floor.rankOrder }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ floor.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_floor_index') }}">back to list</a>

    <a href="{{ path('app_admin_floor_edit', {'id': floor.id}) }}">edit</a>

    {{ include('admin_floor/_delete_form.html.twig') }}
{% endblock %}
